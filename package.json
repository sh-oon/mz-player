{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "description": "MZ Player Monorepo",
  "keywords": [
    "monorepo",
    "yarn-workspace",
    "yarn-berry",
    "typescript",
    "biome",
    "turbo",
    "nextjs",
    "boilerplate"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sh-oon/mz-player.git"
  },
  "license": "MIT",
  "author": "sh-oon",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "node scripts/setup.mjs",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@root/tsconfig": "*",
    "glob": "^11.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.1.0"
}
